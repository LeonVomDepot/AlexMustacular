{
  "Format": "1.28.0",
  "ConfigSchema": {
    "OutfitMode": {
      "AllowValues": "seasonal, spring, summer, fall, winter",
      "Default": "seasonal"
    }
  },
  "DynamicTokens": [
    {
      "Name": "OutfitType",
      "Value": "{{season}}",
      "When": {
        "OutfitMode": "seasonal"
      }
    },
    {
      "Name": "OutfitType",
      "Value": "{{OutfitMode}}",
      "When": {
        "query: '{{OutfitMode}}' <> 'seasonal'": true
      }
    }
  ],
  "Changes": [
    {
      "Action": "EditImage",
      "Target": "Characters/Alex",
      "FromFile": "assets/alex_body.png"
    },
    {
      "Action": "EditImage",
      "Target": "Characters/Alex",
      "FromFile": "assets/outfits/alex_outfit_{{OutfitType}}.png",
      "PatchMode": "Overlay"
    },
    {
      "Action": "EditImage",
      "Target": "Characters/Alex",
      "FromFile": "assets/outfits/alex_outfit_generic.png",
      "ToArea": { "X": 0, "Y": 352, "Width": 64, "Height": 64 },
      "PatchMode": "Overlay"
    },
    {
      "Action": "EditImage",
      "Target": "Characters/Alex",
      "FromFile": "assets/accessoires/alex_accessoire_jacket.png",
      "PatchMode": "Overlay",
      "When": {
        "OutfitType": "winter",
        "IsOutdoors": true
      },
      "Update": "OnLocationChange"
    }
  ]
}
