{
  "Format": "1.28.0",
  "ConfigSchema": {
    "OutfitMode": {
      "AllowValues": "seasonal, spring, summer, fall, winter",
      "Default": "seasonal",
      "Section": "appearance"
    }
  },
  "DynamicTokens": [
    {
      "Name": "OutfitType",
      "Value": "{{season}}",
      "When": {
        "OutfitMode": "seasonal"
      }
    },
    {
      "Name": "OutfitType",
      "Value": "{{OutfitMode}}",
      "When": {
        "query: '{{OutfitMode}}' <> 'seasonal'": true
      }
    },
    {
      "Name": "Festival",
      "Value": "{{Lowercase:{{DayEvent}}}}"
    }
  ],
  "Changes": [
    {
      "Action": "Include",
      "FromFile": "assets/character/character.json"
    }
  ]
}
