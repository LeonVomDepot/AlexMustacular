{
  "Format": "2.0.0",
  "ConfigSchema": {
    "Enabled": {
      "AllowValues": "true, false",
      "Default": true
    },
    "OutfitMode": {
      "AllowValues": "seasonal, spring, summer, fall, winter",
      "Default": "seasonal",
      "Section": "appearance"
    },
    "EnableExtraFestivalOutfits": {
      "AllowValues": "true, false",
      "Default": true,
      "Section": "appearance"
    }
  },
  "DynamicTokens": [
    {
      "Name": "OutfitType",
      "Value": "{{season}}",
      "When": {
        "OutfitMode": "seasonal"
      }
    },
    {
      "Name": "OutfitType",
      "Value": "{{OutfitMode}}",
      "When": {
        "query: '{{OutfitMode}}' <> 'seasonal'": true
      }
    },
    {
      "Name": "Festival",
      "Value": "{{Lowercase:{{DayEvent}}}}"
    },
    {
      "Name": "UseExtraFestivalOutfits",
      "Value": false
    },
    {
      "Name": "UseExtraFestivalOutfits",
      "Value": true,
      "When": {
        "HasFile:assets/character/outfit/festival_{{Festival}}.png": "true",
        "LocationName": "Temp",
        "EnableExtraFestivalOutfits": true
      }
    }
  ],
  "Changes": [
    {
      "Action": "Include",
      "FromFile": "assets/character/character.json",
      "When": {
        "Enabled": true
      }
    }
  ]
}
