{
  "Format": "2.0.0",
  "ConfigSchema": {
    "EnabledSetting": {
      "AllowValues": "true, false",
      "Default": true
    },
    "OutfitModeSetting": {
      "AllowValues": "seasonal, spring, summer, fall, winter",
      "Default": "seasonal",
      "Section": "appearance"
    },
    "ExtraFestivalOutfitSetting": {
      "AllowValues": "true, false",
      "Default": true,
      "Section": "appearance"
    }
  },
  "DynamicTokens": [
    {
      "Name": "OutfitType",
      "Value": "{{season}}",
      "When": {
        "OutfitModeSetting": "seasonal"
      }
    },
    {
      "Name": "OutfitType",
      "Value": "{{OutfitModeSetting}}",
      "When": {
        "query: '{{OutfitModeSetting}}' <> 'seasonal'": true
      }
    }
  ],
  "Changes": [
    {
      "Action": "Include",
      "FromFile": "data/body.json",
      "When": {
        "EnabledSetting": true
      }
    },
    {
      "Action": "Include",
      "FromFile": "data/outfit.json",
      "When": {
        "EnabledSetting": true
      }
    },
    {
      "Action": "Include",
      "FromFile": "data/outfit_festival.json",
      "When": {
        "EnabledSetting": true,
        "ExtraFestivalOutfitSetting": true
      }
    }
  ]
}
